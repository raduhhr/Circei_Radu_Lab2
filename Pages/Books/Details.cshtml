@page
@model Circei_Radu_Lab2.Pages.Books.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.Book.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Book.Author.FirstName</dd>

        <dt class="col-sm-2">Publisher</dt>
        <dd class="col-sm-10">@Model.Book.Publisher.PublisherName</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Book.Price</dd>

        <dt class="col-sm-2">Publishing Date</dt>
        <dd class="col-sm-10">@Model.Book.PublishingDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Categories</dt>
        <dd class="col-sm-10">
            @foreach (var category in Model.Book.BookCategories)
            {
                <span>@category.Category.CategoryName</span>

                <br />
            }
        </dd>
    </dl>
</div>

<p>
    <a asp-page="./Edit" asp-route-id="@Model.Book.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</p>
